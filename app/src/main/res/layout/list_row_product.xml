<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_layout_margin"
        android:elevation="3dp"
        card_view:cardCornerRadius="@dimen/card_product_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/lr_product_thumbnail"
                android:layout_width="@dimen/product_cover_width"
                android:layout_height="@dimen/product_cover_height"
                android:background="#453"
                android:clickable="true"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/lr_tv_product_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lr_product_thumbnail"
                android:paddingLeft="@dimen/product_title_padding"
                android:paddingRight="@dimen/product_title_padding"
                android:paddingTop="@dimen/product_title_padding"
                android:text=" hehjhjeahjhej"
                android:textColor="@color/product_title"
                android:textSize="@dimen/product_title" />

            <TextView
                android:id="@+id/lr_tv_productCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lr_tv_product_title"
                android:gravity="center"
                android:paddingBottom="@dimen/product_code_padding_bottom"
                android:paddingLeft="@dimen/product_title_padding"
                android:paddingRight="@dimen/product_title_padding"
                android:text="hekk"
                android:textSize="@dimen/product_code" />

            <TextView

                android:id="@+id/lr_tv_productPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lr_tv_productCode"
                android:gravity="center"
                android:paddingBottom="@dimen/product_code_padding_bottom"
                android:paddingLeft="@dimen/product_title_padding"
                android:paddingRight="@dimen/product_title_padding"
                android:text="hekk"
                android:textColor="@color/priceText"
                android:textSize="@dimen/priceTextSize"
                android:textStyle="bold" />

            <Button
                android:id="@+id/lr_btn_details"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height"
                android:layout_below="@+id/lr_tv_productPrice"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                android:background="@color/priceText"
                android:text="Details"
                android:textColor="#fff" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>