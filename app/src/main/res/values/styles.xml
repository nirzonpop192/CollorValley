<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="Theme.AppCompat.DayNight.DarkActionBar" />

    <style name="AppTheme.PopOverlay" parent="Theme.AppCompat.Light">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/colorWhite</item>
    </style>

    <!--Alert Dialog Theme-->
    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@android:color/black</item>
        <item name="colorAccent">@android:color/black</item>
        <!-- <item name="android:buttonBarNegativeButtonStyle">@style/NegativeButtonStyle1</item>
         <item name="android:buttonBarPositiveButtonStyle">@style/PositiveButtonStyle1</item>-->
    </style>

    <style name="CardViewTheme">
        <item name="android:layout_marginTop">@dimen/margin_8dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_8dp</item>
        <item name="android:layout_marginStart">@dimen/margin_8dp</item>
        <item name="android:background">@color/colorCardViewBg</item>
        <item name="android:padding">@dimen/padding_5dp</item>
        <!--      <item name="cardE"
              android:layout_marginEnd="8dp"
              android:layout_marginStart="8dp"
              android:layout_marginTop="8dp"
              android:background="@color/colorCardViewBg"
              android:padding="5dp"
              app:cardElevation="5dp"-->
    </style>

    <style name="LabelSpinner"></style>

    <style name="LabelSpinner.Frame">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/margin_8dp</item>
        <item name="android:layout_marginStart">@dimen/margin_8dp</item>
        <item name="android:layout_marginTop">@dimen/margin_16dp</item>
    </style>

    <style name="LabelSpinner.Layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|right</item>
        <item name="android:background">@drawable/border_spinner</item>
        <item name="android:layout_marginTop">@dimen/margin_10dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="LabelSpinner.Spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/spn_label_spinner_height</item>
    </style>

    <style name="LabelSpinner.Label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">top|left</item>
        <item name="android:layout_marginLeft">@dimen/margin_10dp</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/spinner_label_txt_size</item>
    </style>

    <style name="FloatingTextInput"></style>

    <style name="FloatingTextInput.Layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/margin_8dp</item>
        <item name="android:layout_marginStart">@dimen/margin_8dp</item>
        <item name="android:layout_marginTop">@dimen/margin_8dp</item>
    </style>

    <style name="FloatingTextInput.Input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>
</resources>
